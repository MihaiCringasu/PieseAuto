@page
@model PieseAuto.Pages.PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

@* Include Bootstrap pentru stilizare modernă *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <!-- Tabelul cu informațiile -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h3 class="card-title">Informații despre stoc și categorii</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Informație</th>
                        <th>Valoare</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Stoc total de produse</td>
                        <td>@Model.TotalStock</td>
                    </tr>
                    <tr>
                        <td>Număr total de categorii</td>
                        <td>@Model.TotalCategories</td>
                    </tr>
                    <tr>
                        <td>Valoare totală produse (Lei)</td>
                        <td>@Model.TotalValue</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Include scripturile Bootstrap pentru a activa interactivitatea la nevoie *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
